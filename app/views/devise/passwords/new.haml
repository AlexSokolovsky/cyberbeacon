%html
  %head
    = stylesheet_link_tag  'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    %title Cyberbeacon
  = csrf_meta_tag
  %body

    .container
      .row
        .col-md-4.col-md-offset-4
          .login-panel.panel.panel-default
            .panel-heading
              .panel-title Forgot your password?
            .panel-body
              =form_for(resource, as: resource_name, url: password_path(resource_name), :html => {:role => "form"}) do |f|
                = devise_error_messages!

                %fieldset
                  .form-group
                    = f.label :email
                    = f.email_field :email, autofocus: true, class: 'form-control'

                  = f.submit "Send me reset password instructions", :class => 'btn btn-lg btn-success btn-block'

              = render "devise/shared/links"






